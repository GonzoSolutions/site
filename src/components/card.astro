<card class="bordered rounded" radius="medium" style={`background: ${Astro.props.background}`}>
    <header>
        <slot name="header" />
    </header>
    <content>
        <main>
            <slot name="content" />
        </main>
    </content>
    <footer>
        <slot name="footer" />
    </footer>
</card>

<style>

card {
    display: grid;
    grid: auto 1fr auto / auto;
    overflow: hidden;
    font: bold 1rem/1rem Oxanium;
    width: auto;
    height: auto;
    position: relative;
}

card header {}
card footer {}

card content {
    display: flex;
    overflow: hidden;
    width: auto;
    height: auto;
}

card content main {
    display: flex;
    width: 100%;
    height: 100%;
    position: relative;
}
    
</style>